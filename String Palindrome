public class Solution {
    public int isPalindrome(String A) {
        if(A == null || A.isEmpty()){
            return 0;
        }
        String newstr = A.toLowerCase();
        int left = 0;
        int right = newstr.length()-1;
        while(left<right){
            if (newstr.charAt(left) != newstr.charAt(right)){
                return 1;
            }
            left++;
            right--;
        }
        return 0;
    }
}
